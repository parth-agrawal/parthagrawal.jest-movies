generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // get provider from ENV file
  url      = env("DIRECT_URL")
}

model User {
  id     Int             @id @default(autoincrement())
  name   String
  movies MoviesOnUsers[]
}

model Movie {
  id          Int             @id @default(autoincrement())
  title       String
  releaseYear Int
  summary     String
  users       MoviesOnUsers[]
}

model MoviesOnUsers {
  movie   Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)
  movieId Int
  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  Int

  @@id([movieId, userId])
}
